@model List<EMarket.Domain.ViewModels.Category.CategoryViewModel>

<a class="btn btn-primary" href="/Category/Add">Добавить</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Наименование
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td><a class="btn btn-danger" href="/Category/Delete?id=@(category.Id)">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>